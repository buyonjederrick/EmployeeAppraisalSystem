@{
    ViewData["Title"] = "Employee Appraisal Period";
}

@model List<AppraisalPeriod>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Appraisal Period List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>

            <div class="col-6 text-end">
                <a asp-controller="AppraisalPeriod" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Appraisal Period
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>

                    <th>
                        Reporting StartDate
                    </th>
                    <th>
                        Reporting EndDate
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.AppraisalPeriodID))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.ReportingStartDate</td>
                        <td>@obj.ReportingEndDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


