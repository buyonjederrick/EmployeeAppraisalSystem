@{
    ViewData["Title"] = "Create Employee";
}

@model Employee

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Create Employee</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="FirstName" class="form-control border-0 shadow" />
                    <label asp-for="FirstName" class="ms-2"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="LastName" class="form-control border-0 shadow" />
                    <label asp-for="LastName" class="ms-2"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="EmailAddress" class="form-control border-0 shadow" />
                    <label asp-for="EmailAddress" class="ms-2"></label>
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DateOfBirth" class="form-control border-0 shadow" />
                    <label asp-for="DateOfBirth" class="ms-2"></label>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="NIN" class="form-control border-0 shadow" />
                    <label asp-for="NIN" class="ms-2"></label>
                    <span asp-validation-for="NIN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TelephoneNumber" class="form-control border-0 shadow" />
                    <label asp-for="TelephoneNumber" class="ms-2"></label>
                    <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>
                </div>


            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }