@{
    ViewData["Title"] = "Appraisal Objective";
}

@model List<Objective>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Objective List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>

            <div class="col-6 text-end">
                <a asp-controller="Objective" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Objective
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Objective
                    </th>

                    <th>
                        Activity Start Date
                    </th>
                    <th>
                        Activity End Date
                    </th>
                    <th>
                        Employee
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.ObjectiveID))
                {
                    <tr> 
                        <td>@obj.NameOfTheObjective</td>
                        <td>@obj.ActivityStartDate.ToString("MM/dd/yyyy")</td>
                        <td>@obj.ActivityEndDate.ToString("MM/dd/yyyy")</td>
                        <td>@obj.Employee.FirstName @obj.Employee.LastName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


