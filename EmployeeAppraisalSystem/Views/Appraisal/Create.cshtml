@{
    ViewData["Title"] = "Create Appraisal";
}

@model AppraisalVM


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Create Appraisal</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Appraisal.ObjectiveID" asp-items="@Model.ObjectiveList" class="form-select border-0 shadow">
                        <option disabled>Select an Objective</option>
                    </select>
                    <label asp-for="@Model.Appraisal.ObjectiveID" class="ms-2"></label>
                    <span asp-validation-for="@Model.Appraisal.ObjectiveID" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Appraisal.AppraisalPeriodID" asp-items="@Model.AppraisalPeriodList" class="form-select border-0 shadow">
                        <option disabled>Select Appraisal Period</option>
                    </select>
                    <label asp-for="@Model.Appraisal.AppraisalPeriodID" class="ms-2"></label>
                    <span asp-validation-for="@Model.Appraisal.AppraisalPeriodID" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Appraisal.Rating" class="form-control border-0 shadow" />
                    <label asp-for="Appraisal.Rating" class="ms-2"></label>
                    <span asp-validation-for="Appraisal.Rating" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Appraisal.Comment" class="form-control border-0 shadow" />
                    <label asp-for="Appraisal.Comment" class="ms-2"></label>
                    <span asp-validation-for="Appraisal.Comment" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Appraisal.EmployeeID" asp-items="@Model.EmployeeList" class="form-select border-0 shadow">
                        <option disabled>Select Employee</option>
                    </select>
                    <label asp-for="@Model.Appraisal.EmployeeID" class="ms-2"></label>
                    <span asp-validation-for="@Model.Appraisal.EmployeeID" class="text-danger"></span>
                </div>


                <div class="form-floating py-2 col-12">
                    <select asp-for="Appraisal.WorkflowStatus" class="form-control border-0 shadow">
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                    <label asp-for="Appraisal.WorkflowStatus" class="ms-2"></label>
                    <span asp-validation-for="Appraisal.WorkflowStatus" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Appraisal.ApproverComment" class="form-control border-0 shadow" />
                    <label asp-for="Appraisal.ApproverComment" class="ms-2"></label>
                    <span asp-validation-for="Appraisal.ApproverComment" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Appraisal" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                    </div>
                </div>


            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }